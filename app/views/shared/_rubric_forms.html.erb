    <input type="text" class="rating_description" style="min-width: 100px; width: 90%;" name="description"/>
    <div class='button-container button-container-right-aligned' style="text-align:center;">
      <input type="text" size="2" name="points"/>pts
      <button type="submit" class="ok_button button small-button">OK</button>
      <button type="button" class="cancel_button button-secondary">Cancel</button>
    </div>
  </form>
</div>
