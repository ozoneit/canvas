<div id="edit_criterion" style="display: none; text-align: center;">
  <form id="edit_criterion_form">
    <input type="text" class="criterion_description" style="min-width: 100px; width: 90%;" name="description"/>
    <div class="button-container">
      <button type="submit" class="ok_button">OK</button>
      <button type="button" class="cancel_button button-secondary">Cancel</button>
    </div>
  </form>
</div>
<div id="edit_rating" style="display: none; text-align: center;">
