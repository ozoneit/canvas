<% view ||= "about" %>
<%= raw(facebook_messages) %>
<fb:tabs>
  <fb:tab-item href="http://apps.facebook.com/<%= Facebooker.facebooker_config['canvas_page_name'] %>/?<%= fb_key %>" title="Welcome" <%= 'selected="true"' if view == 'about' %>/>
  <% if @user %>
    <fb:if-is-app-user uid="<%= @facebook_user_id %>">
      <fb:tab-item href="http://apps.facebook.com/<%= Facebooker.facebooker_config['canvas_page_name'] %>/settings?<%= fb_key %>" title="Settings" <%= 'selected="true"' if view == 'settings' %>/>
      <fb:else>
        <fb:tab-item href="<%= install_url %>" title="Register"/>
      </fb:else>
    </fb:if-is-app-user>
  <% else %>
    <fb:if-is-app-user uid="<%= @facebook_user_id %>">
      <fb:tab-item href="http://apps.facebook.com/<%= Facebooker.facebooker_config['canvas_page_name'] %>/settings?<%= fb_key %>" title="Settings" <%= 'selected="true"' if view == 'settings' %>/>
      <fb:else>
        <fb:tab-item href="<%= authorize_url %>" title="Register"/>
      </fb:else>
    </fb:if-is-app-user>
  <% end %>
</fb:tabs>
