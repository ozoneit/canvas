<h2 id="dialog_message" style="color: #666; font-size: 24px;">Retrieving Content...</h2>
<% js_block do %>
<script>
var data = <%= raw((@equella_data || {}).to_json) %>;
var parentWindow = window.parent;
while(parentWindow && !parentWindow.equella) {
  parentWindow = parentWindow.parent;
}
if(parentWindow.equella && parentWindow.equella.ready) {
  parentWindow.equella.ready(data);
  setTimeout(function() {
    $("#dialog_message").text("Success!  This popup should close on its own...");
  }, 1000);
} else {
  $("#dialog_message").text("Content retrieval failed, please try again or notify your system administrator of the error.");
}
</script>
<% end %>
