<% notification = account_notification %>
<div class="communication_message dashboard_notification pinned_notification">
  <div class="header">
    <div class="header_title">
      <%= image_tag "#{notification.icon || 'warning'}.png", :class => "header_icon", :style => "padding: 7px 2px 2px;" %>
      <span class="title subject"><%= notification.subject %></span>
      <div class="sub_title">
        <span class="context_code">Alert</span>
      </div>
    </div>
    <div class="links">
      <a href="#" rel="<%= dashboard_close_notification_path(notification.id) %>" class="close_notification_link">close</a>
    </div>
    <div style="clear: left;"></div>
  </div>
  <div class="content">
    <div class="message user_content">
      <%= user_content(notification.message, @domain_root_account.asset_string, notification.asset_string) %>
    </div>
    <div class="clear"></div>
  </div>
</div>
