<% content_for :page_title do %>Confirm Delete User<% end %>

<% content_for :page_header do %>
  <h1>Delete User</h1>
<% end %>

<% content_for :page_subhead do %>
  <h2>Confirm deletion of <%= @user.name %></h2>
<% end %>

<div style="width: 500px; margin-left: auto; margin-right: auto; margin-top: 10px;">
  <h2>Really delete <%= @user.name %>?</h2>
  Are you sure you want to delete this user account?
  <% form_for @user, :html => {:method => 'delete', :style => "margin-top: 20px;"} do %>
    <button type="submit" class="button big-button"><%= image_tag "delete.png" %> Delete <%= @user.name %></button>
  <% end %>
</div>