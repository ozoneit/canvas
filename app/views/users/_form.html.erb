<table class="formtable registration_table">
  <tr>
    <td><%= label :user, :name, "Name:" %></td>
    <td><%= text_field :user, :name %></td>
  </tr><tr>
    <td><%= form.label :unique_id, "Email Address:" %></td>
    <td><%= form.text_field :unique_id, :value => !@pseudonym || @pseudonym.deleted? ? (@pseudonym.deleted_unique_id rescue nil) : @pseudonym.unique_id %></td>
  </tr><tr>
    <td><%= label :user, :school_name, "School/Institution:" %></td>
    <td><%= text_field :user, :school_name %></td>
  </tr><tr>
    <td><%= label :user, :school_name, "Position at School:" %><br/><span style="font-size: 0.8em; padding-left: 10px;">(including dept)</span></td>
    <td style="vertical-align: top;"><%= text_field :user, :school_position %></td>
  </tr><tr>
    <td><%= label :user, :phone, "Phone Number:" %><br/><span style="font-size: 0.8em; padding-left: 10px;">(optional)</span></td>
    <td style="vertical-align: top;"><%= text_field :user, :phone %></td>
  </tr><tr>
    <td style="padding-top: 30px;"><%= label :user, :time_zone, "Time Zone:" %></td>
    <td style="padding-top: 30px;"><%= time_zone_select :user, :time_zone, ActiveSupport::TimeZone.us_zones, :default => ((@domain_root_account && @domain_root_account.default_time_zone) || "Mountain Time (US & Canada)") %></td>
  </tr><tr>
    <td><%= form.label :password, form.object.new_record? ? nil : "Change password" %></td>
    <td><%= form.password_field :password, :style => "width: 150px;" %></td>
  </tr><tr>
    <td><%= form.label :password_confirmation, "Confirm Password:"%></td>
    <td><%= form.password_field :password_confirmation, :style => "width: 150px;" %></td>
  </tr><tr>
    <td colspan="2" style="padding-top: 20px;"><button type="submit" class="button">Register</button></td>
  </tr>
</table>
