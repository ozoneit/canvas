<div id="add_group" style="display: none;">
  <% form_for :assignment_group, :url => context_url(@context, :context_assignment_groups_url), :html => {:id => 'add_group_form', :style => 'display: none; padding: 5px;'} do |form| %>
    <div style="float: left;">
    <%= form.text_field :name, :style => 'width: 175px; font-size: 1.3em;', :title => "Group Name" %>
    <span style="padding-left: 30px;" class="percent_weighting">
      <%= form.text_field :group_weight, :style => "width: 40px; font-size: 1.3em;" %><span style="font-size: 0.8em;"> % of total grade</span>
    </span>
    </div>
    <div class="button-container-right-aligned">
      <button type="submit" class="button ">Update</button>
      <button type="button" class="button-secondary cancel_button" style="margin-right:0 !important;"><%= image_tag("cancel.png") %></button>
    </div>
    <span style="padding-left: 10px; display: none;" class="weighting">
      <span style="font-size: 0.8em;">Assignments:</span>
      <%= form.select :assignment_weighting_scheme, { "Weighted By Points" => "by_points", "Equally Weighted" => "equal" } %>
    </span>
    <div class="form_rules" style="margin-left: 20px;">
    </div>
    <div class="rule" id="assignment_group_rule_blank" style="display: none; margin-top: 2px;">
      <a href="#" class="delete_rule_link no-hover" style="padding-right: 5px;"><%= image_tag "delete_circle.png" %></a>
      <select name="rule_type" class="group_rule_type">
        <option value="drop_lowest">Drop the Lowest</option>
        <option value="drop_highest">Drop the Highest</option>
        <option value="never_drop">Never Drop</option>
      </select>
      <span class="drop_scores">
        <input type="text" class="drop_count" name="scores_to_drop" title="#" size="2" style="text-align: center;"/>
        <span style="font-size: 0.8em;">scores for each student</span>
      </span>
      <span class="never_drop_assignment" style="display: none;">
        <select name="assignment_to_never_drop" class="assignment_to_never_drop">
          <option value="0">[No Assignments]</option>
        </select>
      </span>
    </div>
    <span style="padding-left: 20px; font-size: 0.8em;"><a href="#" class="add_rule_link">add grading rule</a></span>
    <div class="clear"></div>
  <% end %>
  <a href="<%= context_url(@context, :controller => :assignment_groups, :action => :index) %>" class="assignment_groups_url">&nbsp;</a>
</div>
